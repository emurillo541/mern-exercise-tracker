{
  "rewrites": [
    {
      "source": "/api/exercises/(.*)",
      "destination": "${BACKEND_URL}/exercises/$1" 
    }
  ],
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "frontend/api/*.js",
      "use": "@vercel/node"
    }
  ]
}